{
  "name": "mapsv2",
  "version": "1.0.0",
  "description": "A new version of the hackupc maps. Now configured from data",
  "main": "dist/index.html",
  "scripts": {
    "dist": "run-p dist:*",
    "watch": "run-p serve dist watch:*",
    "serve": "http-server dist",
    "predist": "npm run clean && mkdirp dist/assets/js dist/assets/images dist/assets/models dist/assets/fonts",
    "notify-update": "notify -t 'MapsV2' -m 'Dist updated' -s -i './src/favicon.ico'",
    "dist:styles": "mkdirp dist/assets/css && run-p less:*",
    "dist:scripts": "run-s scripts:*",
    "dist:html": "cp src/*.html dist/",
    "dist:fonts": "cp src/fonts/* dist/assets/fonts/",
    "dist:favicon": "cp src/*.ico dist/",
    "dist:models": "cp src/models/* dist/assets/models/",
    "dist:images": "cp -R src/images/* dist/assets/images",
    "scripts:compile": "tsc -m 'commonjs' -t 'es6' --outDir ./temp ./src/scripts/index.ts",
    "scripts:bundle": "browserify temp/index.js > dist/assets/js/index.js",
    "less:main": "lessc src/styles/main.less dist/assets/css/main.css",
    "watch:js": "onchange \"src/scripts/**/*\" -- npm-run-all dist:scripts notify-update",
    "watch:css": "onchange \"src/styles\" -- npm-run-all dist:styles notify-update",
    "watch:models": "onchange \"src/models\" -- npm-run-all dist:models notify-update",
    "watch:html": "onchange \"src/*.html\" -- npm-run-all dist:html notify-update",
    "clean": "rm -Rf dist"
  },
  "keywords": [
    "maps"
  ],
  "author": "Gerard del Castillo (@aslogd)",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^10.11.7",
    "@types/three": "^0.93.1",
    "browserify": "^16.2.3",
    "http-server": "^0.11.1",
    "less": "^3.8.1",
    "node-notifier-cli": "^1.1.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "orbit-controls-es6": "^2.0.0",
    "path-to-regexp": "^2.4.0",
    "three": "^0.97.0",
    "three-fbx-loader": "^1.0.3",
    "typescript": "^3.1.3",
    "uglify-js": "^3.4.9"
  }
}
