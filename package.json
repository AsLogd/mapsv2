{
  "name": "mapsv2",
  "version": "1.0.0",
  "description": "A new version of the hackupc maps. Now configured from data",
  "main": "dist/index.html",
  "scripts": {
    "dist": "npm-run-all -p dist:*",
    "watch": "npm-run-all --parallel serve dist watch:*",
    "serve": "http-server dist",
    "predist": "npm run clean && mkdirp dist/assets/js",
    "notify-update": "notify -t 'MapsV2' -m 'Dist updated' -s",
    "dist:styles": "mkdirp dist/assets/css && npm-run-all -p less:*",
    "dist:scripts": "tsc src/scripts/index.ts --outFile /dev/stdout | uglifyjs -m -c -o dist/assets/js/index.min.js",
    "dist:html": "cp src/*.html dist/",
    "dist:favicon": "cp src/*.ico dist/",
    "less:main": "lessc src/styles/main.less dist/assets/css/main.css",
    "watch:js": "onchange \"src/scripts\" -- npm-run-all dist:scripts notify-update",
    "watch:css": "onchange \"src/styles\" -- npm-run-all dist:styles notify-update",
    "watch:data": "onchange \"src/data\" -- npm-run-all dist:data notify-update",
    "watch:html": "onchange \"src/*.html\" -- npm-run-all dist:html notify-update",
    "clean": "rm -Rf dist"
  },
  "keywords": [
    "maps"
  ],
  "author": "Gerard del Castillo (@aslogd)",
  "license": "MIT",
  "dependencies": {
    "http-server": "^0.11.1",
    "less": "^3.8.1",
    "node-notifier-cli": "^1.1.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "typescript": "^3.1.3",
    "uglify-js": "^3.4.9"
  }
}
